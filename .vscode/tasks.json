{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Sk8Hub: Start Development Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Sk8Hub: Build for Production",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Sk8Hub: Lint Code",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"lint"
			],
			"group": "test",
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "Sk8Hub: Install Dependencies",
			"type": "shell",
			"command": "npm",
			"args": [
				"install"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Sk8Hub: Start Debug Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"env": {
					"NODE_OPTIONS": "--inspect=9229",
					"NEXT_DEBUG": "1"
				}
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	]
}